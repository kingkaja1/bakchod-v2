rules_version = '2';
service cloud.firestore {
  function chatPath(chatId, database) {
    return /databases/$(database)/documents/chats/$(chatId);
  }
  function isChatParticipant(chatId, database) {
    let p = chatPath(chatId, database);
    return exists(p)
      && (request.auth.uid in get(p).data.get('participantIds', [])
          || get(p).data.get('ownerId', '') == request.auth.uid
          || request.auth.uid in get(p).data.get('participants', []));
  }
  function canAccessChat(chatId, database) {
    let p = chatPath(chatId, database);
    return exists(p)
      && (request.auth.uid in get(p).data.get('participantIds', [])
          || get(p).data.get('ownerId', '') == request.auth.uid
          || request.auth.uid in get(p).data.get('participants', []));
  }
  match /databases/{db}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/contacts/{contactId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/chatSettings/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /profiles/{profileId} {
      allow read, write: if request.auth != null && request.auth.uid == profileId;
    }
    match /chats/{chatId} {
      allow read, update, delete: if request.auth != null && (
        ('participantIds' in resource.data && request.auth.uid in resource.data.participantIds) ||
        ('ownerId' in resource.data && resource.data.ownerId == request.auth.uid) ||
        ('participants' in resource.data && request.auth.uid in resource.data.participants)
      );
      allow create: if request.auth != null && (
        ('participantIds' in request.resource.data && request.auth.uid in request.resource.data.participantIds) ||
        ('ownerId' in request.resource.data && request.resource.data.ownerId == request.auth.uid) ||
        ('participants' in request.resource.data && request.auth.uid in request.resource.data.participants)
      );
    }
    match /chats/{chatId}/messages/{messageId} {
      allow read, create, update, delete: if request.auth != null && isChatParticipant(chatId, db);
    }
    match /chats/{chatId}/userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId && canAccessChat(chatId, db);
    }
    match /chats/{chatId}/userDeletedMessages/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId && canAccessChat(chatId, db);
    }
    match /chats/{chatId}/typing/{typingUserId} {
      allow read, write: if request.auth != null && canAccessChat(chatId, db);
    }
    match /invites/{inviteId} {
      allow read, create, update: if request.auth != null;
    }
    match /calls/{callId} {
      allow read, create, update: if request.auth != null;
    }
  }
}
